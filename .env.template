# Environment Configuration Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ==========================================
# Email Configuration
# ==========================================

# SMTP Server (Gmail example)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Your email credentials
# For Gmail: Use App Password, not your regular password
# Generate at: https://myaccount.google.com/apppasswords
SENDER_EMAIL=your.email@gmail.com
SENDER_PASSWORD=your-16-char-app-password

# ==========================================
# Stock Configuration
# ==========================================

# Default stock ticker to monitor
TICKER=AAPL

# ==========================================
# Model Configuration
# ==========================================

# Path to model files (relative to project root)
MODEL_PATH=models/model.pkl
SCALER_PATH=models/scaler.pkl
METADATA_PATH=models/model_metadata.json

# ==========================================
# Data Configuration
# ==========================================

# Number of days of historical data to fetch
HISTORY_DAYS=60

# Data file paths
RAW_DATA_PATH=data/raw_market_data.csv
PROCESSED_DATA_PATH=data/processed_market_data.csv
SUBSCRIBERS_PATH=data/subscribers.json

# ==========================================
# Logging Configuration
# ==========================================

# Log file path
LOG_PATH=logs/predictions.log

# ==========================================
# Streamlit Configuration (Optional)
# ==========================================

# Streamlit theme settings
# Create .streamlit/config.toml for custom themes

# ==========================================
# GitHub Actions Configuration
# ==========================================

# Cron schedule for daily runs (in UTC)
# Examples:
# '0 0 * * *'       - Daily at midnight
# '0 9 * * 1-5'     - Weekdays at 9 AM
# '*/30 9-16 * * *' - Every 30 min, 9 AM - 4 PM
CRON_SCHEDULE='0 0 * * *'

# ==========================================
# Advanced Settings (Optional)
# ==========================================

# API rate limiting
API_DELAY_SECONDS=1

# Retry configuration
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5

# Email retry configuration
EMAIL_MAX_RETRIES=2

# ==========================================
# Development Settings
# ==========================================

# Set to True to enable debug mode
DEBUG=False

# Set to True to skip email sending (for testing)
SKIP_EMAIL=False

# ==========================================
# Notes
# ==========================================

# 1. For Gmail:
#    - Enable 2-Factor Authentication
#    - Generate App Password (not your regular password)
#    - Use the 16-character app password here
#
# 2. For GitHub Secrets:
#    - Don't use .env file in GitHub Actions
#    - Add these as repository secrets instead
#    - Access them in workflow with ${{ secrets.SECRET_NAME }}
#
# 3. Security:
#    - Never commit .env to version control
#    - Add .env to .gitignore
#    - Use environment variables in production
